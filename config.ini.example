[Database]
# Database connection URL
# Examples:
# SQLite: sqlite:///vigint.db
# PostgreSQL: postgresql://username:password@localhost/vigint
# MySQL: mysql://username:password@localhost/vigint
database_url = sqlite:///vigint.db

[API]
# API configuration
secret_key = your-secret-key-here
debug = false
host = 0.0.0.0
port = 5000

[Email]
# Email configuration for sending invoices
smtp_server = smtp.gmail.com
smtp_port = 587
sender_email = your-email@example.com
sender_password = your-email-password-here

[Stripe]
# Stripe payment processing (optional)
api_key = your-stripe-api-key-here
webhook_secret = your-stripe-webhook-secret-here

[Qonto]
# Qonto banking integration (optional)
api_key = your-qonto-api-key-here
organization_slug = your-organization-slug

[Logging]
# Logging configuration
level = INFO
file = vigint.log
max_bytes = 10485760
backup_count = 5