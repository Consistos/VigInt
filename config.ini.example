[Database]
# Database connection URL
# Examples:
# SQLite: sqlite:///vigint.db
# PostgreSQL: postgresql://username:password@localhost/vigint
# MySQL: mysql://username:password@localhost/vigint
database_url = sqlite:///vigint.db

[API]
# API configuration
secret_key = your-secret-key-here
debug = false
host = 0.0.0.0
port = 5000

# API Server URL (for distributed deployments)
# If api_proxy.py runs on a different machine, set this to its URL
# Examples:
#   api_server_url = http://192.168.1.100:5002
#   api_server_url = https://api.yourdomain.com
# Leave empty or comment out for local deployment (default)
# api_server_url =



[Stripe]
# Stripe payment processing (optional)
api_key = your-stripe-api-key-here
webhook_secret = your-stripe-webhook-secret-here

[Qonto]
# Qonto banking integration (optional)
api_key = your-qonto-api-key-here
organization_slug = your-organization-slug

[RTSP]
# RTSP server configuration
host = localhost
port = 8554
username = vigint
password = vigint123
path = camera1

[AI]
# AI analysis configuration
gemini_api_key = your-gemini-api-key-here
analysis_interval = 30
enable_alerts = true

[Email]
# Email configuration for alerts and invoices
smtp_server = smtp.gmail.com
smtp_port = 587
username = your-email@example.com
password = your-email-password-here
from_email = your-email@example.com
to_email = alerts@example.com

[SparseAI]
# Video hosting service configuration (integrated with API server)
# Used for uploading incident videos and generating private links
# NOTE: Video storage is now integrated into the main API server
# Use the same URL as api_server_url if using distributed deployment
# For local deployment, use http://localhost:5002
# For Render.com: https://vigint.onrender.com
api_key = your-sparse-ai-api-key-here
base_url = https://vigint.onrender.com
default_expiration_hours = 48

[Logging]
# Logging configuration
level = INFO
file = vigint.log
max_bytes = 10485760
backup_count = 5