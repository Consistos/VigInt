[Database]
# Database connection URL
# Examples:
# SQLite: sqlite:///vigint.db
# PostgreSQL: postgresql://username:password@localhost/vigint
# MySQL: mysql://username:password@localhost/vigint
database_url = sqlite:///vigint.db

[API]
# API configuration
secret_key = your-secret-key-here
debug = false
host = 0.0.0.0
port = 5000



[Stripe]
# Stripe payment processing (optional)
api_key = your-stripe-api-key-here
webhook_secret = your-stripe-webhook-secret-here

[Qonto]
# Qonto banking integration (optional)
api_key = your-qonto-api-key-here
organization_slug = your-organization-slug

[RTSP]
# RTSP server configuration
host = localhost
port = 8554
username = vigint
password = vigint123
path = camera1

[AI]
# AI analysis configuration
gemini_api_key = your-gemini-api-key-here
analysis_interval = 30
enable_alerts = true

[Email]
# Email configuration for alerts and invoices
smtp_server = smtp.gmail.com
smtp_port = 587
username = your-email@example.com
password = your-email-password-here
from_email = your-email@example.com
to_email = alerts@example.com

[Logging]
# Logging configuration
level = INFO
file = vigint.log
max_bytes = 10485760
backup_count = 5