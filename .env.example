# Vigint Environment Variables
# Copy this file to .env and fill in your actual values

# Google/Gemini AI API
GEMINI_API_KEY=your-gemini-api-key-here

# Stripe Payment Processing
STRIPE_API_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Qonto Banking Integration
QONTO_API_KEY=your-qonto-api-key-here
QONTO_ORGANIZATION_SLUG=your-organization-slug

# Email Configuration
EMAIL_PASSWORD=your-email-app-password-here

# Database (if using external database)
DATABASE_URL=sqlite:///vigint.db

# Security
SECRET_KEY=your-secret-key-here

# Sparse AI Video Hosting Service
# IMPORTANT: Use the actual deployed URL from Render.com
# If using Render.com deployment: https://sparse-ai-video-server.onrender.com
# If using local development: http://127.0.0.1:9999
SPARSE_AI_API_KEY=your-sparse-ai-api-key-here
SPARSE_AI_BASE_URL=https://sparse-ai-video-server.onrender.com
VIDEO_LINK_EXPIRATION_HOURS=48

# Optional: Monitoring
SENTRY_DSN=your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-api-key-here